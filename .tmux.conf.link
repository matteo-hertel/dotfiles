# Prefix
unbind C-b
set -g prefix `
bind ` send-prefix

# New window
unbind '"'
unbind %
bind s split-window -c "#{pane_current_path}"
bind v split-window -h -c "#{pane_current_path}"
bind c new-window -c "#{pane_current_path}"

# Easy Config Reloads
bind r source-file ~/.tmux.conf

# Smart pane switching with awareness of Vim splits.
# See: https://github.com/christoomey/vim-tmux-navigator
is_vim="ps -o state= -o comm= -t '#{pane_tty}' \
    | grep -iqE '^[^TXZ ]+ +(\\S+\\/)?g?(view|n?vim?x?)(diff)?$'"
bind-key -n 'C-h' if-shell "$is_vim" 'send-keys C-h'  'select-pane -L'
bind-key -n 'C-j' if-shell "$is_vim" 'send-keys C-j'  'select-pane -D'
bind-key -n 'C-k' if-shell "$is_vim" 'send-keys C-k'  'select-pane -U'
bind-key -n 'C-l' if-shell "$is_vim" 'send-keys C-l'  'select-pane -R'
tmux_version='$(tmux -V | sed -En "s/^tmux ([0-9]+(.[0-9]+)?).*/\1/p")'
if-shell -b '[ "$(echo "$tmux_version < 3.0" | bc)" = 1 ]' \
    "bind-key -n 'C-\\' if-shell \"$is_vim\" 'send-keys C-\\'  'select-pane -l'"
if-shell -b '[ "$(echo "$tmux_version >= 3.0" | bc)" = 1 ]' \
    "bind-key -n 'C-\\' if-shell \"$is_vim\" 'send-keys C-\\\\'  'select-pane -l'"

bind-key -T copy-mode-vi 'C-h' select-pane -L
bind-key -T copy-mode-vi 'C-j' select-pane -D
bind-key -T copy-mode-vi 'C-k' select-pane -U
bind-key -T copy-mode-vi 'C-l' select-pane -R
bind-key -T copy-mode-vi 'C-\' select-pane -l

bind-key J resize-pane -D 5
bind-key K resize-pane -U 5
bind-key H resize-pane -L 5
bind-key L resize-pane -R 5

#mouse mode for panes
set -g mouse on

#misc
set -g set-titles on
set -g status-interval 1
set -s escape-time 0
set-option -g history-limit 250000
set-option -g focus-events on

# Stop with the annoying questions
bind-key x kill-pane
bind-key & kill-window


#Custom theme
# Basic status bar colors
set -g status-style fg=colour240,bg=colour233

# Left side of status bar
set -g status-left-style fg=colour243,bg=colour233
set -g status-left-length 40
set -g status-left "#[fg=colour233,bg=colour39,bold] #S #[fg=colour39,bg=colour240,nobold]î‚°#[fg=colour233,bg=colour240] #(whoami) #[fg=colour240,bg=colour235]î‚°#[fg=colour240,bg=colour235] #I:#P #[fg=colour235,bg=colour233,nobold]î‚°"

# Right side of status bar
set -g status-right-style fg=colour243,bg=colour233
set -g status-right-length 150
set -g status-right "#[fg=colour235,bg=colour233]î‚²#[fg=colour240,bg=colour235] %H:%M:%S #[fg=colour240,bg=colour235]î‚²#[fg=colour233,bg=colour240] %d/%B/%Y #[fg=colour39,bg=colour240]î‚²#[fg=colour233,bg=colour39,bold] #H ðŸ¤˜"

# Window status
set -g window-status-format "  #I:#W#F  "
set -g window-status-current-format "#[fg=colour233,bg=black]î‚°#[fg=colour81,nobold] #I:#W#F #[fg=colour233,bg=black,nobold]î‚²"

# Current window status
set -g window-status-style fg=colour235,bg=colour39

# Window with activity status
set -g window-status-activity-style fg=colour233,bg=colour245

# Window separator
set -g window-status-separator ""

# Window status alignment
set -g status-justify centre

# Pane border
set -g pane-border-style fg=colour238,bg=default

# Active pane border
set -g pane-active-border-style fg=colour39,bg=default

# Pane number indicator
set -g display-panes-colour colour233
set -g display-panes-active-colour colour245

# Clock mode
set -g clock-mode-colour colour39
set -g clock-mode-style 24

# Message
set -g message-style fg=black,bg=colour39

# Command message
set -g message-command-style fg=black,bg=colour233

# Mode
set -g mode-style fg=colour232,bg=colour39

# Add truecolor support
set-option -ga terminal-overrides ",xterm-256color:Tc"
# Default terminal is 256 colors
set -g default-terminal "screen-256color"

